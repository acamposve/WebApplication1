@model IEnumerable<DocManager.Core.EmbarquesCuentas>
@{
    ViewBag.Title = "UserDashBoard";
}

<div class="data-table-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="data-table-list">
                    <div class="basic-tb-hd">
                        <h2>Mis Embarques</h2>
                        <p>A continuación puede ver la lista de embarques asociados a su usuario, para ver el detalle haga click en el número del BL que desea más información.</p>
                    </div>
                    <div class="table-responsive">
                        <table id="data-table-basic" class="table table-striped">
                            <thead>
                                <tr>
                                    <th>BL</th>
                                    <th>Fecha Arribo</th>
                                    <th>Origen</th>
                                    <th>Destino</th>
                                    <th>Status</th>
                                    <th>Cantidad Containers</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@Html.ActionLink(item.Referencia, "DetallesEmbarques", new { id = item.EmbarqueId })</td>
                                        <td>@Html.DisplayFor(modelItem => item.FechaArribo)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Origen)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Destino)</td>
                                        <td>@Html.DisplayFor(modelItem => item.StatusDescription)</td>
                                        <td>@Html.DisplayFor(modelItem => item.CantidadContainers)</td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
