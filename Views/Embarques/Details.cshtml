@model WebApplication1.Models.Embarques

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="invoice-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="invoice-wrap">
                    <div class="invoice-img">
                        <img src="img/logo/logo.png" alt="" />
                    </div>
                    <div id="divcontent">

                    </div>
                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <div class="invoice-sp">

                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th colspan="8"  style="background-color: #00c292; color:white;">Datos del Embarque</th>
                                        </tr>  
                                        <tr>
                                            <th>Referencia</th>
                                            <th>Fecha Arribo</th>
                                            <th>Origen</th>
                                            <th>Destino</th>
                                            <th>Cantidad Containers</th>
                                            <th>Mercancia</th>
                                            <th>Status</th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td>@Html.DisplayFor(model => model.Referencia)</td>
                                            <td>@Html.DisplayFor(model => model.FechaArribo)</td>
                                            <td>@Html.DisplayFor(model => model.Origen)</td>
                                            <td>@Html.DisplayFor(model => model.Destino)</td>
                                            <td>@Html.DisplayFor(model => model.CantidadContainers)</td>
                                            <td>@Html.DisplayFor(model => model.Mercancia)</td>
                                            <td>@Html.DisplayFor(model => model.StatusDescription)</td>
                                            <td><i class="fas fa-edit"></i><a href="#" onclick="return OpenUpdatePopup(' + @Html.DisplayFor(model => model.EmbarqueId) + ')">Edit</a> | <a href="#" onclick="DeleleTeacher(' + item.Id + ')">Delete</a></td>


                                        </tr>

                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th colspan="5" style="background-color: #00c292; color:white;">Documentos del Embarque</th>
                                </tr>
                                <tr>
                                    <th>Nombre</th>
                                    <th>Tamaño</th>
                                    <th>Extension</th>
                                    <th>Thumbnail</th>

                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in ViewBag.Archivos)
                                {



                                    <tr>
                                        <td>@item.Name</td>
                                        <td>@item.Size</td>
                                        <td>@item.Extension</td>
                                        <td ><img src="~/UploadedFiles/@item.Name" style="width:50px; height:50px;" /></td>
                                        <td> <a href="#" onclick="DeleteFileReceipt(' + @item.FileId + ')">Delete</a></td>
                                    </tr>





                                    @*<div class="col-lg-3 col-md-3 col-sm-3 col-xs-12">
                        <div class="invoice-hs">
                            <img src="~/UploadedFiles/@item.Name" />
                            @Html.ActionLink("Bajar Archivo", "DownloadFile", new { name = item.Name })
                        </div>
                    </div>*@

                                }

                            </tbody>
                        </table>


                    </div>

                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <div class="invoice-ds-int">
                                <h2>Clientes Asignados</h2>
                                @foreach (var item in ViewBag.Cuentas)
                                {
                                    <p>@item.FirstName @item.LastName</p>
                                }
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Invoice area End-->
