@model IEnumerable<DocManager.Core.Embarques>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}





<div class="data-table-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="data-table-list">
                    <div class="basic-tb-hd">
                        <h2>Embarques</h2>
                        <p>Lista de los embarques creados en el sistema.</p>
                    </div>
                    <div class="table-responsive">
                        <table id="data-table-basic" class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Referencia</th>
                                    <th>Fecha Arribo</th>
                                    <th>Origen</th>
                                    <th>Destino</th>
                                    <th>Status</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Referencia)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.FechaArribo)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Origen)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Destino)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.StatusDescription)
                                    </td>
                                    <td>

                                        @Html.ActionLink("Detalles", "Details", new { id = item.EmbarqueId })
                                    </td>
                                </tr>
                                }
                                </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
